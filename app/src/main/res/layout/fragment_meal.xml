<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mealrootview"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:textColor="@color/theme_color"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >

            <ImageView
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save"
                android:textColor="@color/theme_color"
                android:textStyle="bold"
                android:scaleType="fitEnd"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
            <LinearLayout
                android:id="@+id/mealrelativeview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:id="@+id/rlnurseemailtitle"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="2sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_centerInParent="true"
                    android:background="@color/theme_sub_color" />
                <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvAtTime"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:background="@color/white"
                    android:textColor="@color/title_color"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Tijdstip"
                    android:layout_alignParentTop="true"
                    />
        </RelativeLayout>
                <Button
                    android:id="@+id/btnMealtime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvAtTime"
                    android:layout_marginTop="5sp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    style="@style/UIButton"
                    />
                <RelativeLayout
                    android:id="@+id/rlProducttitle"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="2sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5sp"
                        android:layout_centerInParent="true"
                        android:background="@color/theme_sub_color" />
                    <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                        android:id="@+id/tvProductName"
                        android:text="Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/title_color"
                        android:textStyle="bold"
                        android:background="@color/white"
                        android:padding="5sp"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:id="@+id/etProductQty"
                        android:padding="5dp"
                        android:layout_marginTop="5sp"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:background="@drawable/tab_default"
                        android:textColor="@color/title_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:ems="5"  ></EditText> <requestFocus />

                    <TextView
                        android:id="@+id/tv_productportion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/etProductQty"
                        android:layout_alignBottom="@+id/etProductQty"
                        android:layout_alignParentRight="true"
                        android:paddingRight="50sp"
                        android:paddingLeft="50sp"
                        android:clickable="false"
                        android:text="test"
                        android:textColor="@color/title_color" />

                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rltypemealtitle"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="2sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_centerInParent="true"
                    android:background="@color/theme_sub_color" />
                <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMealType"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:background="@color/white"
                    android:textColor="@color/title_color"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="@string/typemaaltijd"

                    />
                </RelativeLayout>
                <Spinner
                    android:id="@+id/spnMealType"
                    android:layout_below="@+id/tvMealType"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    style="@style/spinner_style"
                    />
                <TextView
                    android:id="@+id/tv_carboLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ga naar Koolhydraten tabel"
                    android:textColor="@color/title_color"
                    android:textStyle="bold"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginEnd="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="5sp"
                    android:padding="5dp"
                    />
                <RelativeLayout
                    android:id="@+id/rlcarbotitle"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="2sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_centerInParent="true"
                    android:background="@color/theme_sub_color" />
                <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                    android:id="@+id/tvCarobohydrate"
                    android:text="@string/koolhydraten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:background="@color/white"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:textSize="13sp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                <EditText
                    android:id="@+id/etCarbohydrate"
                    android:padding="5dp"
                    android:layout_marginTop="5sp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:background="@drawable/tab_default"
                    android:textColor="@color/title_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/koolhydraten_hint"
                    android:inputType="numberDecimal"
                    android:ems="5" />

                    <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                        android:id="@+id/etCarbohydrate_hint"
                        android:hint="@string/carbohydrate_hint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|center_vertical"
                        android:padding="8sp"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:layout_alignLeft="@id/etCarbohydrate"
                        android:layout_alignRight="@id/etCarbohydrate"
                        android:layout_alignTop="@id/etCarbohydrate"
                        android:layout_alignBottom="@id/etCarbohydrate"
                       />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rlcommenttitle"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="2sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_centerInParent="true"
                    android:background="@color/theme_sub_color" />
                <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                    android:id="@+id/tvComment"
                    android:text="@string/opmerkingen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/title_color"
                    android:textStyle="bold"
                    android:padding="5sp"
                    android:background="@color/white"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    />
                </RelativeLayout>
                <EditText
                    android:id="@+id/etComment"
                    android:padding="5dp"
                    android:layout_marginTop="5sp"
                    android:layout_below="@+id/tvComment"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:background="@drawable/tab_default"
                    android:textColor="@color/title_color"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="4"
                    android:ems="5" >
                </EditText>
        </LinearLayout>

    </ScrollView>
  </LinearLayout>
