<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="boeren.com.boeren.app.bmedical.boeren.fragments.DiaryDetailFragment">

    <ScrollView
        android:id="@+id/sv_detaillist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/rldaytitle"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="7dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_centerInParent="true"
                android:background="@color/theme_sub_color" />

            <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                android:id="@+id/tv_dayNew"
                android:text="Donderdag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:background="@color/white"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/entriesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:showDividers="middle"
                android:divider="@color/white"
                android:dividerPadding="@dimen/activity_horizontal_margin"
                android:layout_marginTop="5sp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                ></LinearLayout>

            <Button
                android:id="@+id/btnaddNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                style="@style/UIButtonInverse" />

            <RelativeLayout
                android:id="@+id/rlcommenttitle"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="7sp"
                android:layout_marginBottom="7dp"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                >

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5sp"
                android:layout_centerInParent="true"
                android:background="@color/theme_sub_color" />

            <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                android:id="@+id/tv_comment"
                android:text="@string/opmerkingen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/title_color"
                android:background="@color/white"
                android:textStyle="bold"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin" />
            </RelativeLayout>

            <EditText
                android:id="@+id/editText_comment"
                android:padding="5dp"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginStart="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:background="@drawable/tab_active_default"
                android:textColor="@color/title_color"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:ems="5"
                >

                </EditText>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
