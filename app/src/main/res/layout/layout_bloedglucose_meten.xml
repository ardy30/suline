<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        >
        <ImageView
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close"
            android:textColor="@color/theme_color"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            >

            <ImageView
                android:id="@+id/btnSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_save"
                android:textColor="@color/theme_color"
                android:textStyle="bold"
                android:scaleType="fitEnd"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:gravity="end" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@+id/btnopen">
                <RelativeLayout
                    android:id="@+id/rltijdtitle"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="2sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_centerInParent="true"
                    android:background="@color/theme_sub_color" />

                <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tijdstrip"
                    android:textStyle="bold"
                    android:layout_below="@+id/dialog_title"
                    android:background="@color/white"
                    android:textColor="@color/title_color"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Tijdstip"

                    />
            </RelativeLayout>
                <Button
                    android:id="@+id/btn_bloedmetentime"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    style="@style/UIButton" />

                <RelativeLayout
                    android:id="@+id/rldaytitle"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7sp"
                    android:layout_marginBottom="2sp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    >

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5sp"
                    android:layout_centerInParent="true"
                    android:background="@color/theme_sub_color" />

                <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_days"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:textColor="@color/title_color"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginStart="@dimen/activity_horizontal_margin"
                    android:layout_marginRight="@dimen/activity_horizontal_margin"
                    android:text="Dagen"

                    />
          </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        app:rippleColor="@color/theme_color">

                        <CheckBox
                            android:id="@+id/cb_monday"
                            style="@style/CheckBoxStyle.Light"
                            android:layout_width="match_parent"
                            android:text="Maandag"
                            android:paddingLeft="30dp" />
                    </boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        app:rippleColor="@color/theme_color">

                        <CheckBox
                            android:id="@+id/cb_tuesday"
                            style="@style/CheckBoxStyle.Light"
                            android:layout_width="match_parent"
                            android:text="Dinsdag"
                            android:paddingLeft="30dp" />
                    </boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        app:rippleColor="@color/theme_color">

                        <CheckBox
                            android:id="@+id/cb_wednesday"
                            style="@style/CheckBoxStyle.Light"
                            android:layout_width="match_parent"
                            android:text="Woensdag"
                            android:paddingLeft="30dp" />
                    </boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        app:rippleColor="@color/theme_color">

                        <CheckBox
                            android:id="@+id/cb_Thurday"
                            style="@style/CheckBoxStyle.Light"
                            android:layout_width="match_parent"
                            android:text="Donderdag"
                            android:paddingLeft="30dp" />
                    </boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        app:rippleColor="@color/theme_color">

                        <CheckBox
                            android:id="@+id/cb_Friday"
                            style="@style/CheckBoxStyle.Light"
                            android:layout_width="match_parent"
                            android:text="Vrijdag"
                            android:paddingLeft="30dp" />
                    </boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">

                    <boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        app:rippleColor="@color/theme_color">

                        <CheckBox
                            android:id="@+id/cb_Saturday"
                            style="@style/CheckBoxStyle.Light"
                            android:layout_width="match_parent"
                            android:text="Zaterdag"
                            android:paddingLeft="30dp" />
                    </boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    >

                    <boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout
                        style="@style/RippleStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp"
                        app:rippleColor="@color/theme_color">

                        <CheckBox
                            android:id="@+id/cb_Sunday"
                            style="@style/CheckBoxStyle.Light"
                            android:layout_width="match_parent"
                            android:text="Zondag"
                            android:paddingLeft="30dp" />
                    </boeren.com.appsuline.app.bmedical.appsuline.views.MaterialRippleLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>