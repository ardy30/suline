<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="boeren.com.boeren.app.bmedical.boeren.fragments.HerinneringenFragment">

    <TextView
        android:id="@+id/tv_remindertitle"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:text="@string/title_notice_noreminders"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:textColor="@color/theme_color"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:padding="5dp"
        android:background="@drawable/drawable_dashed" />
<ListView
    android:id="@+id/lv_reminder"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:divider="#110000ff"
    android:dividerHeight="2dp"
    android:layout_below="@+id/tv_bluetooth_notice"
    android:layout_marginTop="@dimen/activity_horizontal_margin"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    >
</ListView>

</RelativeLayout>
