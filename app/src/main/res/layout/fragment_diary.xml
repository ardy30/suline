<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/white"
    tools:context=".MainActivity$PlaceholderFragment">

    <boeren.com.appsuline.app.bmedical.appsuline.utils.UITabs
        android:id="@+id/tabs"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <RadioButton
            android:id="@+id/rbtCarbohydrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:checked="true"
            android:drawableTop="@drawable/radiobuttondinner_selector"
            style="@style/UITabs" />

        <RadioButton
            android:id="@+id/rbtInsulin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/radiobuttoninsuline_selector"
            style="@style/UITabs" />

        <RadioButton
            android:id="@+id/rbtBlood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:drawableTop="@drawable/radiobuttonvalue_selector"
            style="@style/UITabs" />

    </boeren.com.appsuline.app.bmedical.appsuline.utils.UITabs>

    <TextView android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/theme_color"
        android:text="@string/totalkoolhydraten"
        android:layout_below="@+id/tabs"
        android:layout_centerHorizontal="true" />



    <ListView
        android:id="@+id/lvCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5sp"
        android:choiceMode="singleChoice"
        android:layout_below="@+id/tvType"

        />
</RelativeLayout>