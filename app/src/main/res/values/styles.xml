<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="android:windowIsTranslucent">true</item>
    <item name="android:actionBarStyle">@style/myTheme.ActionBar</item>
       -<item name="android:windowBackground">@color/white</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="actionMenuTextColor">@color/title_color</item>
        <item name="android:textColorPrimary">@color/title_color</item>
    </style>

    <style name="myTheme.ActionBar" parent="Base.ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/white</item>
        <item name="android:titleTextStyle">@style/myTheme.ActionBar.Text</item>
    </style>

    <style name="myTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/title_color</item>
    </style>
    <style name="AppThemeTrans" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>

    </style>
    <style name="fragment_text">
        <item name="android:textColor">#ffacacac</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="UITabs">
        <item name="android:textColor">@drawable/button_selector_text</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="UIButton">
        <item name="android:textColor">@drawable/button_selector_text_inverse</item>
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>

    <style name="UIButton_subcolor">
        <item name="android:textColor">@drawable/button_selector_text_inverse_subcolor</item>
        <item name="android:background">@drawable/button_selector_subcolor</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>



    <style name="UIButtonInverse">
        <item name="android:textColor">@drawable/button_selector_text</item>
        <item name="android:background">@drawable/button_selector_inverse</item>
        <item name="android:minHeight">33dp</item>
        <item name="android:minWidth">70dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
    </style>
    <!-- Ripple related styles -->
    <style name="RippleStyle">
        <item name="rippleOverlay">true</item>
        <item name="rippleColor">@color/theme_color</item>
        <item name="rippleAlpha">0.7</item>
        <item name="rippleDimension">20dp</item>
        <item name="rippleHover">true</item>
        <item name="rippleDuration">200</item>
        <item name="rippleFadeDuration">50</item>
        <item name="rippleBackground">@android:color/transparent</item>
        <item name="rippleDelayClick">true</item>
        <item name="ripplePersistent">false</item>
        <item name="rippleInAdapter">false</item>
    </style>
    <!-- Ripple related styles end here -->
    <!-- CheckBox related styles -->
    <style name="CheckBoxStyleDark" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>

    <!--<style name="CheckBoxStyle.Dark" parent="@style/CheckBoxStyleDark">
        <item name="android:button">@drawable/checkbox_selector_dark</item>
        <item name="android:textColor">@color/theme_color</item>
    </style>-->

    <style name="CheckBoxStyle.Light" parent="@style/CheckBoxStyleDark">
        <item name="android:button">@drawable/checkbox_selector_light</item>
    </style>
    <!-- CheckBox related styles end here -->

    <!-- Dialog Animation -->
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>
    <!-- Animation for dialog box -->
    <style name="DialogSlideAnim" parent="@android:style/Theme.Dialog">
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>

    <!-- ListView related themes -->
    <style name="ListViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:choiceMode">singleChoice</item>
        <item name="android:divider">@android:color/white</item>
        <item name="android:textColor">@color/title_color</item>
        <item name="android:dividerHeight">0dp</item>
    </style>
    <!-- ListView related themes end here -->

    <style name="spinner_style" >
        <item name="android:background">@drawable/spinner_bg</item>
        <item name="android:textColor">@color/theme_color</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">@color/white</item>
    </style>

    <!-- Progressbar related themes end here -->
    <style name="customProgressbar" parent="@android:style/Widget.ProgressBar.Horizontal" >
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress</item>
        <item name="android:height">20dp</item>
        <item name="android:minHeight">100dip</item>
        <item name="android:maxHeight">100dip</item>
    </style>


</resources>
