<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/gradient"
    android:scaleType="fitXY"
    tools:context="boeren.com.boeren.app.bmedical.boeren.fragments.NewStartFragment"
   >

    <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
        android:layout_marginTop="80sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:text="@string/app_name"
        />
    <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
        android:layout_marginTop="50sp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="30sp"
        android:text="diabetes"
        />
    <boeren.com.appsuline.app.bmedical.appsuline.font.CaeciliaTextView
        android:layout_marginLeft="120sp"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:textSize="20sp"
        android:text="dagboek"
        />

    <Button
        android:layout_width="201dp"
        android:layout_height="wrap_content"
        android:text="Vul uw gegevens in"
        android:id="@+id/btn_filldetails"
        style="@style/UIButton_subcolor"
        android:layout_gravity="center_horizontal" />
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="bottom"
        android:background="@color/white"
        >

        <View
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_marginTop="10sp"
            android:background="@color/theme_sub_color"
            android:layout_gravity="top"
            />
      </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1.0"
            android:src="@drawable/launch_logo"
             />

    </LinearLayout>

</LinearLayout>

